  "components": {
    "schemas": {
      "StatusChangeReq": {
        "required": [
          "toStatus"
        ],
        "type": "object",
        "properties": {
          "toStatus": {
            "type": "string"
          }
        }
      },
      "CreateReq": {
        "required": [
          "equipmentId",
          "itemId",
          "orderQty",
          "processId",
          "workOrderNumber"
        ],
        "type": "object",
        "properties": {
          "workOrderNumber": {
            "type": "string"
          },
          "itemId": {
            "type": "string"
          },
          "processId": {
            "type": "string"
          },
          "equipmentId": {
            "type": "string"
          },
          "orderQty": {
            "minimum": 0,
            "exclusiveMinimum": false,
            "type": "number"
          },
          "createdBy": {
            "type": "string"
          }
        }
      },
      "Req": {
        "type": "object",
        "properties": {
          "workOrderId": {
            "type": "string"
          },
          "itemId": {
            "type": "string"
          },
          "processId": {
            "type": "string"
          },
          "equipmentId": {
            "type": "string"
          },
          "producedQty": {
            "type": "number"
          },
          "defectQty": {
            "type": "number"
          },
          "startTime": {
            "type": "string"
          },
          "endTime": {
            "type": "string"
          }
        }
      },
      "EquipStatusReq": {
        "type": "object",
        "properties": {
          "equipmentId": {
            "type": "string"
          },
          "statusCode": {
            "type": "string"
          },
          "startTimeUtc": {
            "type": "string"
          },
          "endTimeUtc": {
            "type": "string"
          }
        }
      },
      "LoginReq": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "name": "Authorization",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
